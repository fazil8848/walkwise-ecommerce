    <!-- Your Chart rendering code -->
    <script>

        const ctx = document.getElementById('myChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['COD', 'Online'],
                datasets: [{
                    label: 'Payment Method',
                    data: ['<%= cod %>', '<%= online %>'],
                    backgroundColor: [
                        '#EB1616',
                        '#6C7293)'
                    ],
                    hoverOffset: 4
                }]
            }
        });

        const salesChart = document.getElementById('salesChart');
        const labels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];

        const redColors = [
            "rgba(235, 22, 22, 1)",
            "rgba(235, 22, 22, 0.9)",
            "rgba(235, 22, 22, 0.8)",
            "rgba(235, 22, 22, 0.7)",
            "rgba(235, 22, 22, 0.6)",
            "rgba(235, 22, 22, 0.5)",
            "rgba(235, 22, 22, 0.4)",
            "rgba(235, 22, 22, 0.3)",
            "rgba(235, 22, 22, 0.25)",
            "rgba(235, 22, 22, 0.2)",
            "rgba(235, 22, 22, 0.15)",
            "rgba(235, 22, 22, 0.1)"
        ];

        const dataSet = {
            label: 'Monthly Sales',
            data: Array.from({ length: 12 }, (_, i) => {
                const input = Number(document.getElementById(`input${i + 1}`).value);
                return input;
            }),
            backgroundColor: redColors.slice(0, 12),
            borderColor: redColors.slice(0, 12),
            borderWidth: 1,
        };

        new Chart(salesChart, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [dataSet] 
            }
        });


    </script>

