    <!-- Your Chart rendering code -->
    <script>

        const ctx = document.getElementById('myChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['COD', 'Online'],
                datasets: [{
                    label: 'Payment Method',
                    data: ['<%= cod %>', '<%= online %>'],
                    backgroundColor: [
                        '#88c8bc',
                        '#6C7293)'
                    ],
                    hoverOffset: 4
                }]
            }
        });

        const salesChart = document.getElementById('salesChart');
        const labels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];

        const baseColor = "#224957";
        const alphaValues = [
            1, 0.9, 0.8, 0.7, 0.6, 0.5, 0.4, 0.3, 0.25, 0.2, 0.15, 0.1
        ];

        const colorVariants = alphaValues.map(alpha => {
            const rgbaColor = `rgba(${parseInt(baseColor.slice(1, 3), 16)}, ${parseInt(baseColor.slice(3, 5), 16)}, ${parseInt(baseColor.slice(5, 7), 16)}, ${alpha})`;
            return rgbaColor;
        });

        const dataSet = {
            label: 'Monthly Sales',
            data: Array.from({ length: 12 }, (_, i) => {
                const input = Number(document.getElementById(`input${i + 1}`).value);
                return input;
            }),
            backgroundColor: colorVariants.slice(0, 12),
            borderColor: colorVariants.slice(0, 12),
            borderWidth: 1,
        };

        new Chart(salesChart, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [dataSet]
            }
        });



    </script>

