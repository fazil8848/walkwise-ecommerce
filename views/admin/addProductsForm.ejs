            <div class="align">
                <div class="container-fluid pt-4 px-4">
                    <div class="bg-light rounded h-100 p-4">
                        <form action="addProducts" method="post" onsubmit="return checkPrice()" accept="image/*"
                            enctype="multipart/form-data">
                            <h6 class="mb-4">Add Product Details</h6>

                            <div class="row mb-3">
                                <label for="pName" class="col-sm-3 col-form-label">Product Name</label>
                                <div class="col-sm-9">
                                    <input name="productName" type="text" class="form-control" id="pName">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="pBrand" class="col-sm-3 col-form-label">Brand</label>
                                <div class="col-sm-9">
                                    <select class="form-select form-select-sm mb-3" aria-label=".form-select-sm example"
                                        name="brand">
                                        <option selected disabled value=""> Select </option>
                                        <option value="Nike"> Nike </option>
                                        <option value="Adidas"> Adidas </option>
                                        <option value="Merrel"> Merrel </option>
                                        <option value="Gucci"> Gucci </option>
                                        <option value="Skechers"> Skechers </option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="price" class="col-sm-3 col-form-label">Price</label>
                                <div class="col-sm-9">
                                    <input name="price" type="number" class="form-control" id="price">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="pSize" class="col-sm-3 col-form-label">Size</label>
                                <div class="col-sm-9">
                                    <input name="size" type="text" class="form-control" id="pSize">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="stockedOn" class="col-sm-3 col-form-label">Last Stocked On</label>
                                <div class="col-sm-9">
                                    <input name="stockedOn" type="Date" class="form-control" id="stockedOn">
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="quantity" class="col-sm-3 col-form-label">Quantity</label>
                                <div class="col-sm-9">
                                    <input name="quantity" type="number" class="form-control" id="quantity">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">Category</label>
                                <div class="col-sm-9">
                                    <select class="form-select form-select-sm mb-3" aria-label=".form-select-sm example"
                                        name="category">
                                        <% category.forEach(function(category){ %>
                                            <% if( category.is_hidden===false ) {%>
                                                <option value="<%= category._id %>">
                                                    <%= category.name %>
                                                </option>
                                                <% } %>
                                                    <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="formFileMultiple" class="col-sm-3 col-form-label">Images</label>
                                <div class="col-sm-9">
                                    <input name="image" class="form-control" multiple type="file" id="formFileMultiple">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label" for="floatingTextarea">Description</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" name="description" placeholder="Product description"
                                        id="floatingTextarea" style="height: 150px;"></textarea>
                                </div>
                            </div>

                            <div class="row d-flex ">
                                <div class="col-sm-9"></div>
                                <button type="submit"
                                    style=" border-color: #fff; background-image: linear-gradient(to right, #224957, #88C8BC);"
                                    class=" btn-success col-sm-3 rounded-2 float-end mt-2 p-1">Add</button>
                            </div>

                            <% if (typeof messageSuccess !=='undefined' ) {%>
                                <p style="color: green;">
                                    <%= messageSuccess %>
                                </p>
                                <% } %>

                                    <% if (typeof messageFailed !=='undefined' ) {%>
                                        <p style="color: red;">
                                            <%= messageFailed %>
                                        </p>
                                        <% } %>

                        </form>

                        <script>

                            function checkPrice() {
                                const price = document.getElementById('price').value;
                                const quantity = document.getElementById('quantity').value;

                                if (price <= 0 || quantity <= 0) {
                                    return false;
                                } else {
                                    return true;
                                }
                            }

                        </script>


                    </div>
                </div>
