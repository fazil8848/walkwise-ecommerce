				success: function (response) {
					if (response.success) {
						Swal.fire({
							icon: 'success',
							title: 'Product Added',
							text: 'TO Cart Successfully!!',
							confirmButtonText: '<a  style="color: aliceblue;"  href="/cart">GO TO CART</a>',
							cancelButtonText: '<a style="color: aliceblue;"  href="/productDetails?id=<%= product._id %>"> Close</a>',
							showCancelButton: true,
							showCloseButton: true
						})

					} else if (response.outOfStock) {
						swal.fire(
							'Saved to Cart failed!',
							'The Product is Out of Stock!',
							'error'
						)
					} else {
